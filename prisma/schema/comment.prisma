model Comment {
  id         Int      @id @default(autoincrement())
  name       Int
  email      String
  content    String
  role_id    String
  status     DateTime @default(now())
  created_at DateTime @default(now())

  // Relation (many Comment â†’ 1 Blog)
  blogId Int
  blog   Blog @relation(fields: [blogId], references: [id])
}
